%h1
  Address
= render partial: 'nav'
.row
  .col-sm-6
    .panel.panel-primary.address-panel
      .panel-heading
        %h4 Delivery
      .panel-body
        = form_for @credit_card, url: {action: :update} do |f|
          .form-group
            = f.label :number
            = f.text_field :number, class: 'form-control'
          .form-group
            = f.label :cvv
            = f.text_field :cvv, class: 'form-control'
          .form-group
            = f.label :expiration_month
            = f.text_field :expiration_month, class: 'form-control'
          .form-group
            = f.label :expiration_year
            = f.text_field :expiration_year, class: 'form-control'
          .form-group
            = f.label :first_name
            = f.text_field :first_name, class: 'form-control'
          .form-group
            = f.label :last_name
            = f.text_field :last_name, class: 'form-control'
          .form-group
            = f.submit "Save", {class: 'btn btn-primary'}
