%html
  = render :partial => 'layouts/head'
  %body
    = render :partial => 'layouts/nav'
    .container
      .row
        .col-sm-12
          - if notice
            .alert.alert-success
              = notice
          - if alert
            .alert.alert-danger
              - if alert.is_a?(Array)
                - alert.each do |message|
                  = content_tag(:ul) do
                    = content_tag(:li, message)
              - else
                = alert
      .row
        .col-md-12
          = yield
    .container
      %hr
      %footer
        .row
          .col-lg-12
            %p Copyright Â© Your Website 2014
