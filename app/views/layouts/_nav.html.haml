/ Navigation
%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Start Bootstrap
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to("Books", books_path)
        %li
          = link_to("About", {controller: "/site", action: "about"})
        %li
          = link_to("Contact", {controller: "/site", action: "contact"})
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to("Cart (#{cart_total}$)", cart_path, id: 'cart')
        %li
          - if current_customer
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_customer.first_name
              %span.caret
              %ul.dropdown-menu
                %li
                  = link_to("Edit profile",  edit_customer_registration_path)
                %li
                  %a{:href => "#"} Something else here
                %li.divider{:role => "separator"}
                %li
                  = link_to('Logout', destroy_customer_session_path, method: "delete")
          - else
            = link_to("Login", new_customer_session_path)


    / /.navbar-collapse
  / /.container
