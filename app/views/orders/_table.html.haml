%table.table.table-bordered.table-hover
    %thead
        %tr
            %th
                Title
            %th
                Price
            %th
                Quantity
            %th
                Sum
    %tbody
        - order.order_items.each do |item|
            %tr
                %td
                    = item.book.title
                %td
                    = "#{item.book.price}$"
                %td
                    - if editable
                        = render partial: "orders/quantity_form", locals: {item: item}
                    - else
                        = item.quantity
                %td
                    = "#{item.price}$"
    %tfoot
        %tr
            %th Total:
            %th
            %th
                = order.order_items.sum(:quantity)
            %th
                = "#{order.price}$"
