/ Navigation
%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} Start Bootstrap
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => "#"} About
        %li
          %a{:href => "#"} Services
        %li
          %a{:href => "#"} Contact
    / /.navbar-collapse
  / /.container
/ Page Content
.container
  .row
    .col-md-3
      %p.lead Shop Name
      = render :partial => "application/categories"
    .col-md-9
      .row.carousel-holder
        .col-md-12
          #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
            .carousel-inner
              .item.active
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
              .item
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
              .item
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
            %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
              %span.glyphicon.glyphicon-chevron-left
            %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
              %span.glyphicon.glyphicon-chevron-right
      .row
        = render :partial => "books/widget", :collection => @books, :as => :book
/ /.container
